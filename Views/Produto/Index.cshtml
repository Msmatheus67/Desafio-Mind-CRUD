@model IEnumerable<Desafio_Mind_CRUD.Models.ProdutoModel>

@{
    ViewData["Title"] = "Lista de produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-sm btn-primary" asp-action="Create">Cadastrar Produto</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th>
                Preço
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>
                <a class="btn btn-sm" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Id)</a>
            </td>
            <td>
                <a class="btn btn-sm" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Nome)</a>
            </td>
            <td>
                <a class="btn btn-sm " asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Descricao)</a>
            </td>
            <td>
                <a class="btn btn-sm " asp-action="Details" asp-route-id="@item.Id">R$ @Html.DisplayFor(modelItem => item.Preco)</a>
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square"></i></a>

                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
