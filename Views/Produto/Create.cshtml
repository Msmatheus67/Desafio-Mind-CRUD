@model Desafio_Mind_CRUD.Models.ProdutoModel

@{
    ViewData["Title"] = "Cadastrar Produto";
}


<h1>@ViewData["Title"]</h1>

<hr class=""/>
<div class="form-group pb-5">
    <div class="input-group pt-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pt-2"
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group pt-2"
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Preco" class="control-label">Preço</label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group pt-4 pb-2">
                <input type="submit" value="Cadastrar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<hr />

<div>
    <a class="btn" asp-action="Index"><i class="fa fa-chevron-circle-left"></i> Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
