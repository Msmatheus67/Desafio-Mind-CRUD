@model Desafio_Mind_CRUD.Models.ProdutoModel

@{
    ViewData["Title"] = "Deletar Produto";
}

<h1>@ViewData["Title"]</h1>

<h4>Você tem certeza que deseja deletar o produto @Html.DisplayFor(model => model.Nome)?</h4>
<div class="pt-2">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
    <hr />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
    </form>

    <div>
        <a class="btn pt-3" asp-action="Index"><i class="fa fa-chevron-circle-left"></i> Voltar</a>
    </div>
</div>
